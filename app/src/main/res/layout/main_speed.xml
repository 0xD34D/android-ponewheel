        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/speedRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header_speed_top_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="@string/trip_top_speed"
                android:textSize="15.0sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/speed_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/header_speed_top_label"
                android:gravity="right"
                android:text='@{owdevice.deviceNotifyCharacteristics.get(5).value}'
                android:textSize="15.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/speed_trip_distance_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_below="@id/header_speed_top_label"
                android:gravity="left"
                android:text="Trip Distance:"
                android:textSize="15.0sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/trip_distance_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/speed_trip_distance_label"
                android:layout_marginTop="5dp"
                android:text='@{owdevice.deviceNotifyCharacteristics.get(6).value}'
                android:gravity="right"
                android:textSize="15.0sp"
                android:textStyle="bold" />









        </RelativeLayout>
    </LinearLayout>
