<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:columnCount="2"
    tools:ignore="UselessParent">

    <TextView
        android:layout_columnSpan="2"
        android:layout_width="0dp"
        android:layout_gravity="start|fill_horizontal"
        android:text="Mock Data"
        style="@style/Widget.DebugDrawer.Base.Header"
        />

    <TextView
        android:layout_gravity="start|center_vertical"
        android:text="Add a fake ride?"
        style="@style/Widget.DebugDrawer.Base.RowTitle"
        />
    <Button
        android:id="@+id/debug_drawer_add_ride"
        android:layout_gravity="start|center_vertical"
        android:text="+"
        style="@style/Widget.DebugDrawer.Base.RowWidget"
        />

</GridLayout>